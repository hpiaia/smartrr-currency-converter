{
  "name": "@smartrr-currency-converter/backend",
  "private": true,
  "scripts": {
    "build:api": "nest build api",
    "build:worker": "nest build worker",
    "start:api": "nest start api",
    "start:worker": "nest start worker",
    "dev:api": "nest start --watch api",
    "dev:worker": "nest start --watch worker",
    "test": "jest",
    "mfs": "prisma db push --force-reset && prisma db seed",
    "prestart:worker": "prisma migrate dev"
  },
  "dependencies": {
    "@apollo/server": "^4.9.3",
    "@nestjs/apollo": "^12.0.9",
    "@nestjs/axios": "^3.0.0",
    "@nestjs/bull": "^10.0.1",
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/graphql": "^12.0.9",
    "@nestjs/microservices": "^10.2.5",
    "@nestjs/platform-express": "^10.2.5",
    "@nestjs/schedule": "^3.0.3",
    "@prisma/client": "^5.3.1",
    "axios": "^1.5.0",
    "bull": "^4.11.3",
    "graphql": "^16.8.0",
    "graphql-subscriptions": "^2.0.0",
    "ioredis": "^5.3.2",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "jest": "^29.5.0",
    "prisma": "^5.3.1",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@app/infrastructure(|/.*)$": "<rootDir>/libs/infrastructure/src/$1",
      "^@app/core(|/.*)$": "<rootDir>/libs/core/src/$1"
    }
  }
}
